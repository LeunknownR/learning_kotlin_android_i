<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.learningkotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearningKotlin"
        tools:targetApi="31">
        <activity
            android:name=".settings.SettingsAppActivity"
            android:exported="false" />
        <activity
            android:name=".superheroapp.SuperheroDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".superheroapp.SuperheroAppActivity"
            android:exported="false" />
        <activity
            android:name=".todoapp.TodoAppActivity"
            android:exported="false"
            android:theme="@style/Theme.TodoApp" />
        <activity
            android:name=".imccalculator.ImcCalculatorResultActivity"
            android:exported="false" />
        <activity
            android:name=".imccalculator.ImcCalculatorActivity"
            android:exported="false" />
        <activity
            android:name=".CounterActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>